package utils;

import java.awt.*;
import java.awt.event.KeyEvent;

public class PopupHandler {

    public static void closeNativePopup() {
        try {
            Robot robot = new Robot();
            Thread.sleep(1000); 
            robot.keyPress(KeyEvent.VK_ENTER);
            robot.keyRelease(KeyEvent.VK_ENTER);
            System.out.println("Popup closed using ENTER key.");
        } catch (Exception e) {
            System.out.println("No popup or failed to close.");
        }
    }
}
