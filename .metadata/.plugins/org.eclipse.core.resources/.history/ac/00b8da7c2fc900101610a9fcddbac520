package utils;

import java.awt.*;
import java.awt.event.KeyEvent;

public class PopupHandler {

    public static void closeNativePopup() {
        try {
            // short wait to allow popup to render
            Thread.sleep(900);
            Robot robot = new Robot();
            robot.keyPress(KeyEvent.VK_ENTER);
            robot.keyRelease(KeyEvent.VK_ENTER);
            System.out.println("Pressed ENTER to close native popup (if present).");
            // small pause to allow popup to disappear
            Thread.sleep(500);
        } catch (Exception e) {
            System.out.println("PopupHandler: no popup or Robot failed: " + e.getMessage());
        }
    }
}
