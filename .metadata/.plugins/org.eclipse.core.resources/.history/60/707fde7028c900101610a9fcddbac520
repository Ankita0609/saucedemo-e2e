package pages;

import base.BasePage;
import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import java.time.Duration;

public class CartPage extends BasePage {

    private final By checkoutButton = By.id("checkout");

    public CartPage(WebDriver driver) {
        super(driver);
    }

    public CheckoutPage clickCheckout() {
        WebElement checkoutBtn = driver.findElement(checkoutButton);

        // Scroll until the checkout button is visible
        ((JavascriptExecutor) driver).executeScript("arguments[0].scrollIntoView(true);", checkoutBtn);

        // Small wait to ensure scroll completes
        try { Thread.sleep(300); } catch (InterruptedException ignored) {}

        checkoutBtn.click();

        // Handle popup if present
        handlePasswordPopupIfPresent();

        // Wait for checkout page to load
        new WebDriverWait(driver, Duration.ofSeconds(10))
                .until(ExpectedConditions.urlContains("checkout-step-one"));

        return new CheckoutPage(driver);
    }
}